
<div class="MainRealtime">
    <h2 id="connectedUser"></h2>
    <div class="formDiv">
        <form id="addProductForm">
            <H3>Agregar producto</H3>
            <input type="text" id="title" placeholder="Título" required>
            <input type="text" id="description" placeholder="Descripción" required>
            <input type="number" id="price" placeholder="Precio" required>
            <input type="number" id="stock" placeholder="Stock" required>
            <input type="text" id="category" placeholder="Categoría" required>
            <input type="text" id="thumbnails" placeholder="Enlaces de Imágenes" >
            <button type="submit">Agregar Producto</button>
        </form>
    </div>
      <div class="formDiv">
        <form id="editProductForm">
            <h3>Editar producto</h3>
            <select id="editProductId" required></select>
            <input type="text" id="editTitle" placeholder="Nuevo título" >
            <input type="text" id="editDescription" placeholder="Nueva descripción" >
            <input type="number" id="editPrice" placeholder="Nuevo precio" >
            <input type="number" id="editStock" placeholder="Nuevo stock" >
            <input type="text" id="editCategory" placeholder="Nueva categoría" >
            <input type="text" id="editThumbnails" placeholder="Nuevos enlaces de imágenes">
            <button type="submit">Editar Producto</button>
        </form>
    </div>
    <div class="formDiv">
    <form id="deleteProductForm">
        <h3>Eliminar producto</h3>
        <input type="text" id="productId" placeholder="ID del Producto a Eliminar" required>
        <button type="submit">Eliminar Producto</button>
        <p id="deleteID"></p>
    </form>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
